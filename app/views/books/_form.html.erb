<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(book.errors.count, t('books.error')) %> <%= t('books.prohibited_this_book_from_being_saved') %>:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, t('activerecord.attributes.book.title'), style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :memo, t('activerecord.attributes.book.memo'), style: "display: block" %>
    <%= form.text_area :memo %>
  </div>

  <div>
    <%= form.label :author, t('activerecord.attributes.book.author'), style: "display: block" %>
    <%= form.text_field :author %>
  </div>

  <div>
    <%= form.label :picture, t('activerecord.attributes.book.picture'), style: "display: block" %>
    <%= form.file_field :picture %>
  </div>

  <div>
    <%= form.submit t('books.update_book') %>
  </div>
<% end %>
